pipeline {
    agent any

    // Trigger on GitHub push
    triggers {
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                // Replace credentialsId with the ID you set for your PAT
                git branch: 'main',
                    url: 'https://github.com/anukaran007/spring-petclinic.git',
                    credentialsId: 'github-pat-anukaran007'
            }
        }

        stage('Build & Test') {
            steps {
                // Build and test using Maven wrapper, forcing dependency updates
                sh './mvnw clean'
            }
        }
    }

    post {
        always {
            echo "Cleaning workspace..."
            cleanWs()
        }

        success {
            echo "Build succeeded! ✅"
        }

        failure {
            echo "Build failed! ❌"
        }
    }
}
