pipeline {
    agent any

    // Trigger the pipeline on GitHub push events
    triggers {
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/spring-projects/spring-petclinic.git'
            }
        }

        stage('Build & Test') {
            steps {
                // Build and test using Maven wrapper
                sh './mvnw clean'
            }
        }
    }

    post {
        always {
            echo "Cleaning workspace.."
            cleanWs()
        }

        success {
            echo "Build succeeded! ✅"
        }

        failure {
            echo "Build failed! ❌"
        }
    }
}
